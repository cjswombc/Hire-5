<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BoardApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
 	<resource-ref>
		<res-ref-name>jdbc/oracleDB</res-ref-name> 	    
 	    <res-type>javax.sql.DataSource</res-type>
 	    <res-auth>Container</res-auth>
 	</resource-ref>
 	<servlet>
 	    <servlet-name>blog</servlet-name>
 	    <servlet-class>Mybean.myBlogImage</servlet-class>
 	</servlet>
 	<servlet-mapping>
 	    <servlet-name>blog</servlet-name>
 	    <url-pattern>/blog.do</url-pattern>
 	</servlet-mapping>
 	<servlet>
 	    <servlet-name>log</servlet-name>
 	    <servlet-class>Mybean.LoginServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 	    <servlet-name>log</servlet-name>
 	    <url-pattern>/Action.do</url-pattern>
 	</servlet-mapping>
 	<servlet>
 		<servlet-name>logout</servlet-name>
 		<servlet-class>Mybean.LogoutServlet</servlet-class>
 	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/Logout.do</url-pattern>
	</servlet-mapping>
	<filter>  
		<filter-name>sessionExpiredFilter</filter-name>  
		<filter-class>Mybean.SessionCheckFilter</filter-class>  
	</filter>  
	<filter-mapping>  
		<filter-name>sessionExpiredFilter</filter-name>  
		<url-pattern>*.do</url-pattern>  
	</filter-mapping>
	<servlet>
		<servlet-name>AjaxId</servlet-name>
		<servlet-class>Mybean.AjaxId</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AjaxId</servlet-name>
		<url-pattern>/AjaxId.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AjaxPass</servlet-name>
		<servlet-class>Mybean.AjaxPass</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AjaxPass</servlet-name>
		<url-pattern>/AjaxPass.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AjaxPwc</servlet-name>
		<servlet-class>Mybean.AjaxPwc</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AjaxPwc</servlet-name>
		<url-pattern>/AjaxPwc.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AjaxEmail</servlet-name>
		<servlet-class>Mybean.AjaxEmail</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AjaxEmail</servlet-name>
		<url-pattern>/AjaxEmail.do</url-pattern>
	</servlet-mapping>
</web-app>